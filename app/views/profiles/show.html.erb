<div class="page-header">
	<h1><%= @user.full_name %></h1>


	<% if !(current_user.full_name == @user.full_name) %>
	<%= link_to "Add Friend", new_user_friendship_path(friend_id: @user), class: "btn" %>
	<% end %>



	<li><%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-link pull-right" %></li>
</div>

<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="well">
			<%= status.content %>
			<hr />
			<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
			<span class="pull-right">
				<%= link_to "Edit", edit_status_path(status) %> |
				<%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>
			</span>
		</div>
	<% end %>
<% end %>
