<div class="row">
    <div class="span4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well"}) do |f| %>
        <%= devise_error_messages! %>

        <fieldset>
      <legend>Sign up</legend>

      <div class="field">
        <%= f.input :first_name, autofocus: true %><br />
      </div>

      <div class="field">
        <%= f.input :last_name %><br />
      </div>

      <div class="field">
        <%= f.input :profile_name %><br />
      </div>

      <div class="field">
        <%= f.input :email %><br />
      </div>

      <div class="field">
        <%= f.input :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        
      </div>

      <div class="field">
        <br />
        <%= f.input :password_confirmation, autocomplete: "off" %><br />
      </div>

      <div class="actions">
        <%= f.button :submit, "Sign up" %>
      </div>
      <br />
      <%= render "devise/shared/links" %>
      </fieldset>
    <% end %>

   
  </div>
  <div class="span8">
    <h2>Welcome to Treebook</h2>
  </div>
</div>